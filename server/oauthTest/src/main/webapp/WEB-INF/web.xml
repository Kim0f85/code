<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>oauthTest</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>OAuthServlet</servlet-name>
    <servlet-class>com.test.oauth.OAuthServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>OAuthServlet</servlet-name>
	    <url-pattern>/oauth</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>CallbackServlet</servlet-name>
	    <servlet-class>com.test.oauth.CallbackServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>CallbackServlet</servlet-name>
	    <url-pattern>/oauthCallback</url-pattern>
	</servlet-mapping>
  
      <servlet>
        <servlet-name>UserInfo</servlet-name>
        <servlet-class>com.test.oauth.data.UserInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserInfoServlet</servlet-name>
        <url-pattern>/userInfo</url-pattern>
    </servlet-mapping>
  
  
</web-app>