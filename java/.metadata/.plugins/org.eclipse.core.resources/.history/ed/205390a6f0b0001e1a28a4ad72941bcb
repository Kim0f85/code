class Pen{
	
	private String model;
	private String color;
	public static int count = 0; //누적 변수(펜 개수)
	
	public Pen(String model, String color) {
		this.model = model;
		this.color = color;
	}
	
	public String dump() {
		return String.format("[model: %s, colorL %s]", this.model,this.color);
	}
	
}