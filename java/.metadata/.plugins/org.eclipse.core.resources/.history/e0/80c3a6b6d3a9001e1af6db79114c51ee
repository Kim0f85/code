package com.test.java;

public class Ex04_Variable {
	
	public static void main(String[] args) {
		
		
		// + 연산자
		
		int a = 10;
		int b = 20;
		
		// 10 + 20 = 30
		
		// A + B > 이항 연산자 (피연산자를 2개)   양옆에 숫자면 계산, 문자가 하나라도 있으면 붙임
		
		// System.out.println(a + " + " + b + " = " + a + b);
		// 1020 이 나오는 이유
		// 연산자 우선순위 > 1 + 2 X 3
		// 연산자 방향
		// 컴퓨터는 연산자 우선순위가 똑같은 경우, 왼쪽 부터 실행 
		// 문자로 만들어서 1020이 나옴, 30이 나오려면 다른 것 보다 먼저 실행되어야 하므로 () 사용 

		System.out.println(a + " + " + b + " = " + (a + b));
		
		
		//주민등록번호 입력 > 출력
		// ex) 950105
		// int jumin1 = 950105;
		
		// System.out.println("주민번호: " + jumin1);
		
		int jumin1 = 030711; // 8진수
		
		System.out.println("주민번호: " + jumin1);
		
		// 자바의 기수법
		// - 10진수
		// - 2진수
		// - 8진수
		// - 16진수
		// - 2진수
		
		System.out.println(10); // 10진수
		System.out.println(010); // 8진수 단, 출력할땐 10진수로 출력
		System.out.println(0x10); // 16진수 >> 색상값 표현
		System.out.println(0b10); // 2진수  
		
		// 실수 리터럴
		double d1 = 1200;
		double d2 = 1.2e+3;
		
		System.out.println(d1);
		System.out.println(d2);
		
		
		
		
		
		
	}

}
