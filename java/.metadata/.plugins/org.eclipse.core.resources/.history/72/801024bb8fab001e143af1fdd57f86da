package com.test.question;

import java.util.Calendar;

public class Q019 {
	
	public static void main(String[] args) {
		
		
		nowTime();
		
		
	}//main

	private static void nowTime() {
		
		
		Calendar now = Calendar.getInstance();
		
		// System.out.println(now.get(Calendar.HOUR_OF_DAY));
		// System.out.println(now.get(Calendar.MINUTE));
		// System.out.println(now.get(Calendar.SECOND));
		// System.out.println(now.get(Calendar.AM_PM));
		
		
		System.out.printf("현재 시간 : %02d시 %02d분 %02d초\n", now.get(Calendar.HOUR_OF_DAY), now.get(Calendar.MINUTE), now.get(Calendar.SECOND));
		System.out.printf("현재 시간 : %s %02d시 %02d분 %02d초\n", 
				now.get(Calendar.AM_PM) == 0? "오전" : "오후" , now.get(Calendar.HOUR), now.get(Calendar.MINUTE), now.get(Calendar.SECOND));
		
		
		
		//현재 시간 : 10시 30분 25초
		//현재 시간 :  오전 10시 30분 25초 
		
		//24 번 음식을 받기 원하는 시간은 오후 11시 이전에만 가능합니다.(날짜 변경 금지) 모르겠으면 무시해도 됨 
	}

}
