package com.test.question;

public class Q059 {
	public static void main(String[] args) {
		int result = 1;
		int addition1 = 0;
		int addition2 = 1;
		int num1 = 0;

		for (int i = 0; i < 100; i++) {
			if (addition1< 100) {
				addition1=result += incre(i);
				if(addition1<100) {
					System.out.printf("%d + ", result);
				}
				
			}else {
				break;
			}
			num1 +=result;
		}
		System.out.printf("= %d",num1);
	}

	private static int incre(int i) {
		int make = 0;
		for (int j = 0; j < i; j++) {
			make++;
		}
		return make;
	}
}
