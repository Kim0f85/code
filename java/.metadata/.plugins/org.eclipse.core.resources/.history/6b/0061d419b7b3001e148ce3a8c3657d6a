package com.test.question;

import java.util.Scanner;

public class Q090 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.print("입력: ");
		String input = scan.nextLine();
		int result = 0;
		int addition = 0;
		
		
		for(int i = 0; i<input.length() ; i++) {
			
			switch(input.substring(i,i+1)) {
			case "1": result=(int)1; break;
			case "2": result=(int)2; break;
			case "3": result=(int)3; break;
			case "4": result=(int)4; break;
			case "5": result=(int)5; break;
			case "6": result=(int)6; break;
			case "7": result=(int)7; break;
			case "8": result=(int)8; break;
			case "9": result=(int)9; break;
			}
			System.out.println(result);
			
			
		
			result+=result;
		}
		System.out.printf("문장에 존재하는 모든 숫자의 합은 %d입니다.",result);
	}
}
