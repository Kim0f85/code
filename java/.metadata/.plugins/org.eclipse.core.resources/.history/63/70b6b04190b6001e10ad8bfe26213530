package com.test.java.collection;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Calendar;
import java.util.Collections;

import javax.print.attribute.standard.Compression;

public class Ex61_Sort {
	public static void main(String[] args) {
		//Ex61_Sort.java
		
		//배열 or 컬렉션 
		//- 순서가 있는 데이터 집합 
		//- 정렬 사용
		
		//- 정렬
		//- 오르차순, 내림차순
		//1. 직접 구현 > 정렬 알고리즘
		//2. JDK 제공 기능 > Arrays.sort()
		
		m1();
	}

	private static void m1() {
		//1. 숫자 
		//2. 문자(열)
		//3. 날짜시간 
		
		//A.1 숫자 + 배열 
		int [] nums1 = {1,5,3,4,3};
		
		System.out.println(Arrays.toString(nums1));
		
		//오름차순 정렬
		Arrays.sort(nums1);
		
		//내림차순 정렬?
		System.out.println(Arrays.toString(nums1));
		System.out.println();
		
		//A.2 숫자 + 컬랙션(list)
		ArrayList<Integer>nums2 = new ArrayList<Integer>();
		nums2.add(1);
		nums2.add(5);
		nums2.add(3);
		nums2.add(4);
		nums2.add(2);
		
		System.out.println(nums2);
		System.out.println();
		
		//오름차순
		Collections.sort(nums2);
		
		
		//B1. 문자열 + 배열 
		String s1 = "java";
		String s2 = "java";
		
//		System.out.println(s1>s2);
		
		int result = compareString(s1,s2);
		System.out.println(result);
		
		System.out.println(s1.compareTo(s2));
		System.out.println(s1.compareToIgnoreCase(s2));
		
		
		String [] names = {"유재석","홍길동","박명수","이순신","강감찬"};
		
		Arrays.sort(names);
		
		System.out.println(Arrays.toString(names));
		System.out.println();
		
		ArrayList<String>names2 = new ArrayList<String>();
		
		names2.add("유재석");		
		names2.add("홍길동");		
		names2.add("박명수");		
		names2.add("이순신");		
		names2.add("강감찬");		
		
		Collections.sort(names2);
		
		System.out.println(names2);
		System.out.println();
		
		
		//c.1 날짜시간 + 배열
		
		Calendar[] clist = new Calendar[5];
		
		clist[0] = Calendar.getInstance();
		clist[0].add(Calendar.DATE, -5);
		
		clist[1] = Calendar.getInstance();
		clist[1].add(Calendar.DATE, 3);
		
		clist[2] = Calendar.getInstance();
		clist[2].add(Calendar.DATE, -2);
		
		clist[3] = Calendar.getInstance();
		clist[3].add(Calendar.DATE, -7);
		
		clist[4] = Calendar.getInstance();
		
		for(int i = 0 ; i < clist.length ; i ++) {
			System.out.printf("%tF\n",clist[i]);
		}
		System.out.println();
		
		Arrays.sort(clist);
		
		
	}//m1

	private static int compareString(String s1, String s2) {
		
		//문자열 우위비교 
		// s1 = "홍길동";
		// s2 = "강아지";
		
		int length = s1.length() > s2.length() ? s2.length(): s1.length();
		System.out.println("길이: "+ length);
		
		for(int i = 0 ; i < 3 ; i++) {
			char c1 = s1.charAt(i);
			char c2 = s2.charAt(i);
			
			if(c1>c2) {
				return 1; 
			}else if (c1<c2) {
				return -1;
			}
		}
		
		if(s1.length() > s2.length()) {
			return 1; 
		}else if(s1.length() < s2.length()) {
			return -1;
		}
		
		
		
		return 0;
	}
}
