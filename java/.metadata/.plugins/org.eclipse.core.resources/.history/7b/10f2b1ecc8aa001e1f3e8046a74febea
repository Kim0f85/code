package com.test.java;

public class Ex15_Method {
	public static void main(String[] args) {
		//Ex15_Method.java
		
		//public static void hello()
		
		//void > 반환타입
		//hello > 메서드명 > *** 메서드명은 캐멀 표기법
		//() > 인자리스트 
		
		//메서드 인자리스트 
		//- 파라미터(parameters)
		//- 인자 (Arguments)
		//- 매개변수 
		
		//요구사항] '홍길동' 에게 인사를 하는 메서드를 구현하시오 
		
		hello();
		
	}// main
	
	public static void hello() {
		//구현부 
		System.out.println("홍길동님. 안녕하세요.");
		
		
	}
	
	
	
}//class
